      },
      "budget_discussed": {
        "points": 5,
        "description": "Discusses budget or financing"
      },
      "price_only_focus": {
        "points": -20,
        "description": "Only asks for prices without context"
      },
      "vague_requirements": {
        "points": -15,
        "description": "Very vague requirements"
      }
    }
  },
  "requirement_clarity": {
    "max_points": 20,
    "criteria": {
      "specific_model": {
        "points": 10,
        "description": "Specific model preferences mentioned"
      },
      "technical_requirements": {
        "points": 5,
        "description": "Technical requirements discussed"
      },
      "logistics_discussion": {
        "points": 5,
        "description": "Delivery/logistics considerations"
      },
      "extremely_vague": {
        "points": -10,
        "description": "Extremely vague needs"
      }
    }
  },
  "risk_deductions": {
    "max_deduction": -30,
    "flags": {
      "price_focused": {
        "deduction": -10,
        "description": "Only interested in prices, no qualifying info"
      },
      "vague_location": {
        "deduction": -10,
        "description": "Unclear or constantly changing destination"
      },
      "no_company": {
        "deduction": -10,
        "description": "Refuses to provide company information"
      },
      "suspicious_behavior": {
        "deduction": -15,
        "description": "Inconsistent information or suspicious patterns"
      },
      "unrealistic_expectations": {
        "deduction": -5,
        "description": "Demands immediate pricing or unrealistic terms"
      }
    }
  },
  "routing_thresholds": {
    "HUMAN_NOW": {
      "min_score": 75,
      "description": "High-quality lead - immediate sales handoff"
    },
    "NURTURE": {
      "min_score": 50,
      "max_score": 74,
      "description": "Medium quality - 24h follow-up nurture sequence"
    },
    "FAQ_END": {
      "max_score": 49,
      "description": "Low quality - send FAQ resources and end"
    }
  }
