      },
      "quantity_6_20": {
        "points": 15,
        "description": "Mentions 6-20 units"
      },
      "quantity_20_plus": {
        "points": 20,
        "description": "Mentions 20+ units"
      },
      "clear_destination": {
        "points": 10,
        "description": "Clear destination port/city"
